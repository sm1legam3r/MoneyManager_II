<Page x:Class="MoneyManager_II.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyManager_II"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Основной счёт:"
                   FontSize="36px"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource TextColor}"
                   VerticalAlignment="Center"/>
        <TextBlock Text="0,0 рублей"
                   Grid.Column="1"
                   FontSize="36px"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource TextColor}"
                   VerticalAlignment="Center"/>
        <TextBlock Text="Доходы"
                   Grid.Row="1"
                   Foreground="{DynamicResource TextColor}"
                   HorizontalAlignment="Center"
                   FontSize="24px"/>
        <TextBlock Text="Расходы"
                   Grid.Row="1"
                   Grid.Column="2"
                   Foreground="{DynamicResource TextColor}"
                   HorizontalAlignment="Center"
                   FontSize="24px"/>
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">

            <Button Content="Создать счёт"
                    Width="300px"
                    Height="60px"
                    Background="{DynamicResource TwoColor}"
                    Foreground="{DynamicResource TextColor}"
                    FontSize="24px"
                    FontWeight="Bold"
                    Cursor="Hand"/>
            <Button Content="Добавить доход"
                    Width="300px"
                    Height="60px"
                    Background="{DynamicResource OneColor}"
                    Foreground="{DynamicResource TextColor}"
                    FontSize="24px"
                    FontWeight="Bold"
                    Margin="30px 0 0 0"
                    Cursor="Hand"/>
            <Button Content="Добавить расход"
                    Width="300px"
                    Height="60px"
                    Background="{DynamicResource SecondaryColor}"
                    Foreground="{DynamicResource TextColor}"
                    FontSize="24px"
                    FontWeight="Bold"
                    Margin="30px 0 0 0"
                    Cursor="Hand"/>

        </StackPanel>
    </Grid>
</Page>
