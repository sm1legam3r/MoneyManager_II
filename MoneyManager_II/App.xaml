<Application x:Class="MoneyManager_II.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MoneyManager_II"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle">
                <Setter Property="Button.Width" Value="Auto"/>
                <Setter Property="Button.Height" Value="40px"/>
                <Setter Property="Button.FontSize" Value="18px"/>
                <Setter Property="Button.Margin" Value="0 20px 0 0"/>
                <Setter Property="Button.Background" Value="{StaticResource TwoColor}"/>
                <Setter Property="Button.Foreground" Value="{StaticResource TextColor}"/>
                <Setter Property="Button.Cursor" Value="Hand"/>
            </Style>

            <Style x:Key="TextBoxStyle">
                <Setter Property="TextBox.Width" Value="200px"/>
                <Setter Property="TextBox.Height" Value="30px"/>
                <Setter Property="TextBox.Margin" Value="10px"/>
            </Style>

            <Style x:Key="IconStyle">
                <Setter Property="Image.Width" Value="55px"/>
                <Setter Property="Image.Margin" Value="0 20px 0 0"/>
                <Setter Property="Image.Cursor" Value="Hand"/>
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
